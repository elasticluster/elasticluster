# Site specific configuration properties for Alluxio
# Details about all configuration properties http://www.alluxio.org/documentation/en/Configuration-Settings.html

# Common properties
alluxio.master.hostname={{groups['mesos']|first}}
alluxio.logs.dir=/var/log/alluxio

# Security properties
# alluxio.security.authorization.permission.enabled=true
# alluxio.security.authentication.type=SIMPLE

# Worker properties
alluxio.worker.memory.size=1GB
alluxio.worker.tieredstore.levels=1
alluxio.worker.tieredstore.level0.alias=MEM
alluxio.worker.tieredstore.level0.dirs.path=/mnt/ramdisk

# User properties
alluxio.user.file.readtype.default=CACHE_PROMOTE
alluxio.user.file.writetype.default=MUST_CACHE

# use installed Alluxio
alluxio.integration.mesos.alluxio.jar.url=LOCAL
alluxio.home=/usr/lib/alluxio

# use the local JVM/JDK
alluxio.integration.mesos.jdk.url=LOCAL

# disable security
alluxio.security.authorization.permission.enabled=false

# connection configuration
alluxio.underfs.address={{mesos_alluxio_storage_protocol}}://{{mesos_alluxio_storage_root}}
fs.swift.user={{mesos_alluxio_storage_user}}
fs.swift.tenant={{mesos_alluxio_storage_tenant}}
fs.swift.password={{mesos_alluxio_storage_password}}
fs.swift.auth.url={{mesos_alluxio_storage_auth_url}}
fs.swift.use.public.url={{mesos_alluxio_storage_use_public_url}}
fs.swift.auth.method={{mesos_alluxio_storage_auth_method}}
fs.swift.region={{mesos_alluxio_storage_region}}
